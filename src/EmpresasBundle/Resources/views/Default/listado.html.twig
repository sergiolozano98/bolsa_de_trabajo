{% extends 'basesimple.html.twig' %}

{% block body %}
    <!-- MenÃº de Empresas --> 
    
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
       
      <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-dark" href="{{ path('empresas_inicio') }}"></a>
            <a class="p-2 text-dark" href="{{ path('empresas_inicio') }}">Ver ofertas</a>
            <a class="btn btn-outline-primary" href="{{ path('empresa_nueva') }}"> <i class="fa fa-pencil"></i> Crear una nueva empresa</a>
      </nav>
      <div class="my-5 my-md-0 mr-md-3">
            {% form_theme busqueda 'EmpresasBundle:Form:formBusqueda.html.twig' %}

        {{ form_start(busqueda) }}
            {{ form_widget(busqueda) }}
        {{ form_end(busqueda) }}
      </div>   
      
      <a class="btn btn-outline-primary" href="#"><i class="fa fa-search"></i> Buscar Ofertas</a>
    </div>
     <div class="container">    
        <div class="row">
            <div class="col-4">
                <h1> Listado de empresas </h1>
            </div>
            <div class="col-2">
                {{ form_start(busqueda) }}
                <table>
                    <tr><td>{{ form_widget(busqueda.campoBusqueda) }}</td><td>{{ form_row(busqueda.Buscar) }} </td></tr> 
                </table>
                {{ form_end(busqueda) }}
            </div>
        </div>
    </div>

    
    <div class="container">    
        {% for empresa in empresas %}
            <div class="row">
                <div class="col-3"> {{ empresa.nombre }}</div>
                <div class="col-2"> {{ empresa.telefono }}</div>
                <div class="col-4"> {{ empresa.correo }}</div>
                <div class="col-2"> {{ empresa.provincia }}</div>
                <a class="btn" href="{{ path('empresa_show', { 'id': empresa.id }) }}"> <i class="fa fa-eye"></i></a>
                <a class="btn btn" href="{{ path('empresa_edit', { 'id': empresa.id }) }}"> <i class="fa fa-edit"></i></a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
