{% extends 'basesimple.html.twig' %}

{% block body %}
        <!-- Menú de Ofertass --> 
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
       
      <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-dark" href="{{ path('ofertas_inicio') }}"></a>
            <a class="btn btn-outline-primary" href="{{ path('ofertas_inicio') }}"><i class="fa fa-eye"></i> Ver ofertas</a>
            <a class="btn btn-outline-primary" href="{{ path('oferta_nueva') }}"> <i class="fa fa-pencil"></i> Crear una nueva oferta</a>
            <a class="btn btn-outline-primary" href="{{ path('oferta_index') }}"> <i class="fa fa-copy"></i> Duplicar Oferta </a>
            <a class="btn btn-outline-primary" href="{{ path('oferta_buscar') }}"> <i class="fa fa-search"></i> Buscar oferta</a>
      </nav>

    </div>
    
    <div class="container"> 
        <div class=" bg-white border-bottom box-shadow">

            <h1>Edición de Oferta</h1>
             {% form_theme edit_form 'OfertasBundle:Form:fields.html.twig' %}
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <center><input class="btn btn-outline-primary" type="submit" value="Guardar" /></center>
                
            {{ form_end(edit_form) }}
            
        </div>
            <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
            <nav class="my-2 my-md-0 mr-md-3">        
                    <a class="btn btn-outline-primary" href="{{ path('oferta_index') }}">Volver a la lista</a>
                    <a class="btn btn-outline-primary" href="{{ path('oferta_index') }}">Duplicar Oferta</a>
                    <a class="btn btn-outline-primary" href="{{ path('oferta_buscar') }}"> <i class="fa fa-search"></i> Buscar oferta</a>
            </nav>
            </div>
        
    </div>
            
{% endblock %}
